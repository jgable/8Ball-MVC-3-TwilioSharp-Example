<head>
  <meta charset="utf-8">

  <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame 
       Remove this if you use the .htaccess -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>@Page.Title</title>
  <meta name="description" content="">
  <meta name="author" content="">
  
  <!--  Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width, minimum-scale=0.7, maximum-scale-0.7">

  <!-- Place favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <!-- CSS : implied media="all" -->
  <link rel="stylesheet" href="@Url.Content("~/css/style.css?v=2")">
  <link rel="stylesheet" href="@Url.Content("~/css/site.css?v=1")">

  <!-- Google Font Link -->
  <link href='http://fonts.googleapis.com/css?family=Bangers' rel='stylesheet' type='text/css'>

  <style type="text/css">
    .bodyBg { background-image: url('@Url.Content("~/img/darkbg.png")'); }
    #title h1 { font-family: 'Bangers', arial, serif; }
  </style>


  <!-- Uncomment if you are specifically targeting less enabled mobile browsers
  <link rel="stylesheet" media="handheld" href="@Url.Content("~/css/handheld.css?v=1")"> -->
 
  <!-- All JavaScript at the bottom, except for Modernizr which enables HTML5 elements & feature detects -->
  <script src="@Url.Content("~/js/libs/modernizr-1.6.min.js")"></script>
  
  @RenderSection("HeadContent", false)

</head>

<body class="bodyBg">

  <div id="container">
        <header id="header">
            <div id="title">
                <h1>The All Knowing Magical 8-Ball</h1>
            </div>

            <div id="logindisplay" style="visibility: hidden">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">
                <ul id="menu" style="visibility: hidden">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </header>

        <div id="main" role="main">
            @RenderBody()            
        </div>

        <footer id="footer">
            <center>Created by <a href="http://jacob4u2.posterous.com">Jacob Gable</a></center>
        </footer>    
  </div> <!--! end of #container -->


  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery. fall back to local if necessary -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.js"></script>
  <script>      window.jQuery || document.write("<script src='@Url.Content("~/js/libs/jquery-1.5.1.js")'>\x3C/script>")</script>
  
  
  <!-- TODO: scripts concatenated and minified via ant build script-->  
  <script src="@Url.Content("~/js/plugins.js")"></script>
  <script src="@Url.Content("~/js/script.js")"></script>
  <!-- end concatenated and minified scripts-->

  <!-- ADDED: Page Level script sections -->
  @RenderSection("ScriptSection", false)  
  
